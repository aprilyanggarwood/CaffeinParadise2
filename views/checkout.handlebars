<script>
  $(document).ready(() => {
    let subTotal = 0;
    const cart = localStorage.getItem("savedCart")
      ? JSON.parse(localStorage.getItem("savedCart"))
      : [];
    renderCartForCheckout();

    function renderCartForCheckout() {
      $("#checkoutCart").html("")
      cart.forEach((item, i) => {
        const total = item.price * item.quan;
        subTotal += total;
        $("#checkoutCart").append(`
      <medium>${item.size} ${item.name} x ${item.quan} = $${total.toFixed(2)}</medium>
      `
        )
      });
      $("#checkoutCart").append(`<hr><p>Subtotal - $${subTotal}</p>`)
    }

    $("#checkoutBtn").click(function () {

      $.ajax({
        method: "POST",
        url: "/api/order",
        data: { cart, subTotal },
      }).then((data) => {
        localStorage.removeItem("savedCart");
        window.location.replace("/members")
      });

    })
  })
</script>
