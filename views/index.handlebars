    <title>Caffeine Paradise</title>
</head>

<body>
    <div class="hero-image">

        <button onclick="typeWriter()">Click me</button>
        <div class="hero-text">
            <p id="demo"></p>
            <h2>Welcome <span class="member-name"></span></h2>
        </div>
    </div>

    <div id="navbarHP" class="pill-nav">
        <nav class="navbar navbar-expand-lg navbar-light bg-dark">
            <h2> Caffeine Paradise</h2>

            <nav class="collapse navbar-collapse" id="navbarNav">
                <ulNav class="navbar-nav ml-auto">
                    <li class="nav-item active"><a href="#" class="navR"><i class="fas fa-phone"></i> 888.888.8888<span
                                class="sr-only">(current)</span></a></li>
                    <li class="nav-item">
                        <a href="mailto:caffeineParadise@gmail.com" class="navR"><i class="far fa-envelope"></i> Email
                            Us</a>
                    </li>
                    <li class="nav-item">
                        <a href="/login.html" class="navR"><i class="fas fa-sign-out-alt"></i> LOGOUT</a>
                    </li>

                </ulNav>
            </nav>
        </nav>

    </div><br>
    {{!-- </div> --}}

    <div class="parallax">
        <h2><i class="fas fa-mug-hot"></i> Hot Coffees</h2>


        <div class="row row-cols-1 row-cols-md-4 g-2" style="margin: 15px;">
            {{#each drinks}}
            {{#if isHotDrink}}
            <div class="col">
                <div class="card h-100">

                    <img src={{img_url}} class="card-img-top img-size" alt="...">

                    <div class="card-body card-hight">
                        <h4 class="card-title">{{name}}</h4>
                        <p class="card-text">{{short_description}}</p>
                    </div>

                    <div class="card-footer">
                        <select class="quantity form-select form-select-sm target" aria-label=".form-select-sm example">
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                        <select class="price form-select form-select-sm target" aria-label=".form-select-sm example">
                            <option value="small-{{price_sm}}" selected>small - ${{price_sm}}</option>
                            <option value="medium-{{price_md}}">medium - ${{price_md}}</option>
                            <option value="large-{{price_lg}}">large - ${{price_lg}}</option>
                        </select>
                        <button class="order-btn">Order</button>
                    </div>
                </div>
            </div>
            {{/if}}
            {{/each}}
        </div>

        <div>
            <h2><i class="fas fa-coffee"></i> Cold Coffees</h2>
        </div>

        <div class="row row-cols-1 row-cols-md-4 g-2" style="margin: 15px;">
            {{#each drinks}}
            {{#unless isHotDrink}}
            <div class="col">
                <div class="card h-100">

                    <img src={{cold_img_url}} class="card-img-top img-size" alt="...">

                    <div class="card-body card-hight">
                        <h4 class="card-title">{{name}}</h4>
                        <p class="card-text">{{short_description}}</p>
                    </div>
                    <div class="card-footer">
                        <select class="quantity form-select form-select-sm target" aria-label=".form-select-sm example">
                            <option value="1" selected>1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                        </select>
                        <select class="price form-select form-select-sm target" aria-label=".form-select-sm example">
                            <option value="small-{{price_sm}}" selected>small - ${{price_sm}}</option>
                            <option value="medium-{{price_md}}">medium - ${{price_md}}</option>
                            <option value="large-{{price_lg}}">large - ${{price_lg}}</option>
                        </select>
                        <button class="order-btn">Order</button>
                    </div>
                </div>
            </div>
            {{/unless}}
            {{/each}}
        </div>


        <div>
            <div class="row">
                <div class="col-6">
                    <h2 class="order-here">Your Orders Here!</h2>
                    <ul id="cart">

                    </ul>
                    <hr>
                    <div class="total">Your Total - $<span id="total"></span></div>

                    <button type="submit" class="btn btn-success place-btn">Checkout</button>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog">
                    </div>
                </div>

                {{!-- <div class="col-1"></div> --}}
                <div>
                    <div id="col-5">
                        <h2 class="order-history">Your Order History!</h2>
                    </div>
                    <div class="history-list">
                        {{#each orders}}
                        <ul>
                            <h4>Order#{{id}} <button data-bs-toggle="modal" data-order-id={{id}}
                                    data-bs-target="#exampleModal" class=" btn btn-sm btn-success
                         showDetails">Details</button> on {{format_time createdAt}}</h4>
                        </ul>
                        {{/each}}
                    </div>

                </div>

            </div>
        </div>
    </div><br>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous">
